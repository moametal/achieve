<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

    <h3>以下の内容で、送信する。</h3>

    <%= form_for(@contact) do |f| %>
      <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :content %>
      <p>名前:<%= @contact.name %></p>
      <p>EMAIL:<%= @contact.email %></p>
      <p>本文:<%= @contact.content %></p>
      <%= f.submit "登録する",class: 'btn btn-sm btn-info' %>
    <% end %>

    <%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-sm btn-primary' %>
    <% end %>
    
  </div>
</div>